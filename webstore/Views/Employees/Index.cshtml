@model IEnumerable<EmployerViewModel>
@{
    Layout = "_Layout";
}


  

<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SurName</td>
            <td>@item.FirstName</td>

            <td>@item.Patronymic</td>
            <td>@item.Age</td>
            
            <td>
                <a asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id">ДЕТАЛИ</a>
            </td>

            <td>@Html.ActionLink("Детали","Details", new {id = item.Id})</td>
        </tr>
    }
</table>
    

